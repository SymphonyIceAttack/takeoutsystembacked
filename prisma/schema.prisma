// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  account  String  @unique
  password String
  identity String
  Order    Order[]
  Shop     Shop?
}

model ProductsShelves {
  id               String  @id @unique @default(uuid())
  goods_title      String
  area_id          String
  mer_id           String
  store_title      String
  AreaTitle        String
  goods_price_sale Int
  sold_total_all   Int
  allowShopControl Boolean
  isShelvesShow    Boolean
  shop             Shop    @relation(fields: [mer_id], references: [id])
  Dish             Dish[]
}

model Shop {
  id          String            @id @unique @default(uuid())
  userId      String            @unique
  store_title String
  area_id     String
  area_title  String
  ProdList    ProductsShelves[]
  Order       Order[]
  user        User              @relation(fields: [userId], references: [id])
}

model ShopSettle {
  id          String @id @unique @default(uuid())
  account     String @unique
  password    String
  store_title String
  area_id     String
  area_title  String
  status      String
}

model Dish {
  id          String @id @default(uuid())
  order_id    String
  create_time String

  productId String
  order     Order           @relation(fields: [order_id], references: [id])
  product   ProductsShelves @relation(fields: [productId], references: [id])
}

model Order {
  id      String @id @unique @default(uuid())
  mer_id  String
  user_id String

  create_time String

  dishes Dish[]

  status     String
  number     Int
  totalPrice Int

  shop Shop @relation(fields: [mer_id], references: [id])
  user User @relation(fields: [user_id], references: [id])
}
